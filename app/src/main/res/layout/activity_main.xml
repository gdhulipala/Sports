<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#E0F2F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Team A: Score "
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#F48FB1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="0"
                android:layout_marginLeft="24dp"
                android:textSize="50sp"
                android:id="@+id/teamA_score"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/teamA_6runs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="#80CBC4"
                android:text="+6 RUNS"
                android:layout_marginLeft="16dp"/>


            <Button
                android:id="@+id/teamA_4runs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="#80CBC4"
                android:text="+4 RUNS" />

            <Button
                android:id="@+id/teamA_2runs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="#80CBC4"
                android:text="+2 RUNS"
                android:layout_marginRight="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/teamA_1runs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="#80CBC4"
                android:text="+1 RUNS"
                android:layout_marginLeft="16dp"/>


            <Button
                android:id="@+id/teamA_wide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="#80CBC4"
                android:text="WIDE" />

            <Button
                android:id="@+id/teamA_noballs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="#80CBC4"
                android:text="NO BALLS"
                android:layout_marginRight="16dp"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B: Score "
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-medium"
                android:textColor="#F48FB1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="24dp"
                    android:textSize="50sp"
                    android:id="@+id/teamB_score"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/teamB_6runs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="#80CBC4"
                    android:text="+6 RUNS"
                    android:layout_marginLeft="16dp"/>


                <Button
                    android:id="@+id/teamB_4runs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="#80CBC4"
                    android:text="+4 RUNS" />

                <Button
                    android:id="@+id/teamB_2runs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="#80CBC4"
                    android:text="+2 RUNS"
                    android:layout_marginRight="16dp"/>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/teamB_1runs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="#80CBC4"
                    android:text="+1 RUNS"
                    android:layout_marginLeft="16dp"/>


                <Button
                    android:id="@+id/teamB_wide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="#80CBC4"
                    android:text="WIDE" />

                <Button
                    android:id="@+id/teamB_noball"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="#80CBC4"
                    android:text="NO BALL"
                    android:layout_marginRight="16dp"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="RESET"
        android:id="@+id/reset"
        android:background="#80CBC4"
        android:layout_marginBottom="10dp"/>


</LinearLayout>


